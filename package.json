{
  "name": "ts-healthcheck-middleware",
  "version": "1.0.1",
  "description": "An Express middleware for creating a health endpoint, written in Typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "release": "node ./scripts/release.js",
    "test": "NODE_ENV=test jest",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brendanatme/ts-healthcheck-middleware.git"
  },
  "author": "brendanatme",
  "license": "ISC",
  "homepage": "https://github.com/brendanatme/ts-healthcheck-middleware",
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "express": "^4.16.3",
    "jest": "^23.4.0",
    "nodemon": "^1.18.1",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.2",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "collectCoverageFrom": [
      "**/*.{js,json,ts,tsx}"
    ],
    "coverageDirectory": "../coverage"
  }
}
